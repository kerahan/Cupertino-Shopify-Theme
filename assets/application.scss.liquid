// put your styles here

.btn-custom {
	background-color: grey;
	color: white;
}

.btn-custom2 {
	background-color: green;
	color: white;

	&:not([disabled]):hover,
	&:focus {
		background-color: #6593f5;
	}
}

.bg-modals {
	background-color: rgba(0, 0, 0, 0.6);
	width: 100%;
	height: 100%;
	position: absolute;
	z-index: 1;
	top: 0;
	display: none;
	justify-content: center;
	overflow: auto;
	align-items: center;
}

.modal-contents {
	height: 300px;
	width: 500px;
	background-color: white;
	padding: 20px;
	position: relative;
	border-radius: 4px;
	box-shadow: 0 5px 8px 0 rgba(0, 0, 0, 0.5), 0 7px 20px 0 rgba(0, 0, 0, 0.17);
}
.modal-item-title{
	font-weight: bold;
}

.modal-item-quantity {
	position: absolute;
	right: 10px;	
}

.modal-item-header {
	font-weight: bold;
	margin-bottom: 0.5rem;
}

#closeBtn {
	margin-top: 0.5rem;
	text-align: center;
}
.modal-cart-total {
	margin-top: 1rem;
	margin-bottom: 0.5rem;
}
.modal-cta-link {
	width: 100%;
	margin-top: 3rem;
}

.close {
	position: absolute;
	top: 0;
	right: 10px;
	font-size: 42px;
	color: #333;
	transform: rotate(45deg);
	cursor: pointer;
	&:hover {
		color: #666;
	}
}
